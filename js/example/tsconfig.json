{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES2017",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "baseUrl": "./",
    "paths": {
      "@test/*": [ "./test/*" ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", "jest"
    ]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
